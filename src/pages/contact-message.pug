                    .contact__content
                        form.contact__message
                            input(type="text" placeholder="Name")
                            input(type="text" placeholder="Email")
                            input(type="text" placeholder="Phone Number")
                            textarea(placeholder="Message")
                .contact__win-it-all
                    +winItAllOffers()
            .contact__social

    include ../blocks/get-know/get-know
