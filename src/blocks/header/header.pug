header.header
    .layout.header__wrapper
        button.burger-menu.burger-menu--mobile
            span.burger-menu__item
            span.burger-menu__item
            span.burger-menu__item
        if (user === true)
            .my-account__user.my-account__user--mobile
                a(href="#").my-account__user-name Hello! Oladapo
                a(href="#").my-account__user-price (N67,000)
        .header__menu-wrapper
            ul.header__menu
                +listLink('Home', '/', 'header__menu-list', 'header__menu-link')
                +listLink('Lotteries', '#', 'header__menu-list', 'header__menu-link')
                +listLink('Results', '#', 'header__menu-list', 'header__menu-link')
                +listLink('Blog', '#', 'header__menu-list', 'header__menu-link')
        .header__search-wrapper
            input(type="text" placeholder="Search").header__search
            button.header__search-button
                +mixinSvg('18px', '18px', 'icon-search', 'icon-search')
        .header__registration-wrapper
            if (user === true)
                include ../my-account/my-account

            else
                a(href="#register").popup.header__registration Log IN \ Register

        .header__cart-wrapper
            a(href="#").header__link-home home
            .header__cart-drop
                a(href="#").header__cart
                    | Cart
                    +mixinSvg('30px', '28px', 'icon-cart', 'icon-cart')
                    .header__cart-counter 0
                .header__cart-preview
                    if (addCart === true)
                        .header__cart-product
                            .header__cart-item
                                a(href="#").header__cart-product-image
                                    img(src="img/logos/logo4.png" alt="Logo")
                                .header__cart-product-content
                                    a(href="#").header__cart-product-title US Power Ball
                                    p.header__cart-product-desc 1 Quick Play
                                    p.header__cart-product-price N2,500
                                a(href="#").header__cart-product-delete
                                    +mixinSvg('20px', '25px', 'icon-delete', 'icon-delete')
                            .header__cart-item
                                a(href="#").header__cart-product-image
                                    img(src="img/logos/logo4.png" alt="Logo")
                                .header__cart-product-content
                                    a(href="#").header__cart-product-title US Mega Millions
                                    p.header__cart-product-desc 1 Quick Play
                                    p.header__cart-product-price N2,500
                                a(href="#").header__cart-product-delete
                                    +mixinSvg('20px', '25px', 'icon-delete', 'icon-delete')
                        .header__cart-total
                            p Total
                            .header__cart-total-sum N4,000
                        a(href="#").button.button--large.button--darkgreen Continue
                    else
                        .header__cart-content
                            p Unfortunately, #[br] your cart is empty
                            p Please add a game to your cart
                        .header__cart-button
                            a(href="#").button.button--large.button--darkgreen Play Now


        .header__drop-menu
            .drop-menu
                .drop-menu__button
                    .drop-menu__name Menu
                    .drop-menu__arrow
                    .drop-menu__counter 1
                .drop-menu__drop
                    .drop-menu__drop-wrapper
                        a(href="#").drop-menu__drop-title Mega Millions Naija
                        ul.drop-menu__main
                            +listLink('All Lottos', '#', 'drop-menu__main-list', 'drop-menu__main-link')
                            +listLink('United States Lottos', '#', 'drop-menu__main-list', 'drop-menu__main-link')
                            +listLink('Euro Lottos', '#', 'drop-menu__main-list', 'drop-menu__main-link drop-menu__main-link--active')
                            +listLink('My profile', '#', 'drop-menu__main-list', 'drop-menu__main-link')
                            +listLink('My Account', '#', 'drop-menu__main-list', 'drop-menu__main-link')
                            li.drop-menu__main-list
                                a(href="#").drop-menu__main-link Message #[span.count 3]
                            +listLink('How to Play', '#', 'drop-menu__main-list', 'drop-menu__main-link')
                            +listLink('Contact Us', '#', 'drop-menu__main-list', 'drop-menu__main-link')

.header__search-wrapper.header__search-wrapper--mobile
    input(type="text" placeholder="Search").header__search
    button.header__search-button
        +mixinSvg('18px', '18px', 'icon-search', 'icon-search')